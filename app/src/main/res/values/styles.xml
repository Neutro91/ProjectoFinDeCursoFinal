<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulos">
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="textStyle">bold</item> -->
    </style>

    <style name="ColorBoton1">
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="textStyle">bold</item> -->
        <item name="android:background">#FDFD74</item>
    </style>

    <style name="ColorBoton2">
        <item name="android:textColor">#000000</item>
        <!-- <item name="textStyle">bold</item> -->
        <item name="android:background">#95F5E1</item>
    </style>

    <style name="ColorBotonGoogle">
        <item name="android:textColor">#FFFFFF</item>
        <!--  <item name="textStyle">bold</item> -->
        <item name="android:background">#ff0808</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="ColorBotonFacebook">
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="textStyle">bold</item> -->
        <item name="android:background">#285B8D</item>
    </style>

    <style name="colorfondo">
        <item name="android:background">#F0EBEA</item>
    </style>

    <style name="sinfondo">
        <item name="android:background">@null</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Required for sign-in flow styling -->
        <item name="colorControlNormal">@color/material_green_500</item>
        <item name="colorControlActivated">@color/material_lime_a700</item>
        <item name="colorControlHighlight">@color/material_green_a200</item>
        <item name="android:windowBackground">@drawable/fondogradient2</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>